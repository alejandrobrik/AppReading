<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewCourse">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgPatient"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_study_classroom"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="top"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Curso:" />
                <TextView
                    android:text="N/D"
                    android:layout_weight="1"
                    android:id="@+id/tvNameCourse"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="top"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Paralelo:" />
                <TextView
                    android:text="N/D"
                    android:layout_weight="1"
                    android:id="@+id/tvParallelCourse"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Codigo:" />
                <TextView
                    android:text="N/D"
                    android:layout_weight="1"
                    android:id="@+id/tvCodeClass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"

                    android:id="@+id/miniCardViewCopy"

                    android:layout_width="50dp"

                    android:layout_height="50dp"

                    app:cardElevation="18dp"

                    app:cardCornerRadius="8dp"

                    android:layout_margin="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"

                    app:layout_constraintHorizontal_bias="0.65"

                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/textViewPatientTitle" >

                    <LinearLayout

                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:orientation="vertical"

                        android:gravity="center"

                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageView

                            android:layout_width="40dp"

                            android:layout_height="40dp"

                            android:src="@drawable/baseline_content_copy_24"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>